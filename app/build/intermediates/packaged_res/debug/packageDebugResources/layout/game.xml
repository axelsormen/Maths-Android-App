<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <Button
        android:id="@+id/buttonBackToMainMenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink"
        android:drawableLeft="@drawable/backicon"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="@string/backToMainMenu"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="@font/my_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:fontFamily="@font/my_font"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/buttonBackToMainMenu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toBottomOf="@id/feedbackText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/problemText"
            android:textColor="@android:color/black"
            android:textSize="70sp"
            android:fontFamily="@font/my_font"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/answerInput"
            android:text="0"
            android:textSize="70sp"
            android:fontFamily="@font/my_font"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="left"
            android:layout_width="90dp"
            android:layout_height="75dp"/>

    </LinearLayout>

        <View
            android:id="@+id/underline"
            android:layout_width="145dp"
            android:layout_height="4dp"
            android:background="@android:color/black"
            android:layout_marginRight="35dp"
            android:layout_gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/answerInput" />

        <View
            android:id="@+id/underline2"
            android:layout_width="145dp"
            android:layout_height="4dp"
            android:background="@android:color/black"
            android:layout_marginRight="35dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/underline" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/problem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:text="1"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/button2"
                android:text="2"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:textSize="50sp"
                android:fontFamily="@font/my_font"
                android:backgroundTint="@color/pink"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submitAnswer"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:text="@string/submit"
        android:fontFamily="@font/my_font"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/brightgreen"
        app:layout_constraintTop_toBottomOf="@id/numberGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
